#login-buttons
  padding 10px 15px
  line-height 20px
  
@media (min-width: 768px)
  #login-buttons
    padding-top 15px
    padding-bottom 15px
    
.navbar-default
  background-color rgba(0,0,0,0.7)
  
  .navbar-brand
    color lighten(#00b6e1, 20)
    font-family 'Sansita One'
    font-size 2.6rem
    
    &:hover
      color #fff
      
    &:active
      color #fff
    &:visited
      color lighten(#00b6e1, 20)
      
  .navbar-nav li a
    color #fff
    
    &:hover
      color rgba(0, 182, 225, 1)
    &:visited
      color #fff
      
  .f32
    margin 6px 15px 0px 15px
    
.navbar-collapse.in
  overflow visible!important
  
  #login-dropdown-list
    left 0px!important
      
