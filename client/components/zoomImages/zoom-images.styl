.zoom-bg
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  pointer-events none
  transition 1s
  

  
#zoom-box
  position absolute
  transform translate(-50%, -50%)
  box-shadow 0 0 200px #D2C5C5  
  user-select none
  img
    width 100%
    height 100%
.zoom-prev, .zoom-next
  position absolute
  top 0
  height 100%
  width 30%
  background rgba(255,255,255,0.3)
  text-align center
  opacity 0
  transition 0.3s
  cursor pointer
  span
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    font-size 4rem
    font-weight 900
    opacity 0.6
    pointer-events none
  &:hover
    opacity 1
.zoom-prev
  left 0
.zoom-next
  right 0
    
.zoom-open
  .zoom-bg
    background rgba(255,255,255,0.7)
    pointer-events all
    
.enhance
  cursor zoom-in